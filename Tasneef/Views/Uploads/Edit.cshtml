@model Tasneef.Models.Upload
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["Edit"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-12">
    <div class="card">

        <div class="card-body">
            <h4 class="card-title">@Localizer["Edit Upload"]</h4>

            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="IsForm" class="control-label">@Localizer["Form?"]</label>
                            <input asp-for="IsForm" class="form-control"  />
                            <span asp-validation-for="IsForm" class="text-danger"></span>
                        </div>
                        <div class="form-group" id="customer">
                            <label asp-for="CustomerId" class="control-label">@Localizer["Customer"]</label>
                            <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                            <span asp-validation-for="CustomerId" class="text-danger"></span>
                        </div>
                        <div class="form-group" id="project">
                            <label asp-for="ProjectId" class="control-label">@Localizer["Project"]</label>
                            <select asp-for="ProjectId" class="form-control" asp-items="ViewBag.ProjectId"></select>
                            <span asp-validation-for="ProjectId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Tag" class="control-label">@Localizer["Tag"]</label>
                            <input asp-for="Tag" class="form-control" />
                            <span asp-validation-for="Tag" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="FilePath" class="control-label">@Localizer["File"]</label>
                            <a href="~/Uploads/@Model.FilePath" class="form-control">@Model.FilePath</a>

                        </div>



                        <div class="form-group">
                            <label asp-for="Tag" class="control-label">@Localizer["Select File"]</label>
                            <input type="file" name="file" />
                        </div>


                        <div class="form-group">
                            <input type="submit" value="@Localizer["Save"]" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="Index">@Localizer["Back to List"]</a>
            </div>

        </div>
    </div>
</div>
<script src="~/js/site.js"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        isForm();

    </script>
}
