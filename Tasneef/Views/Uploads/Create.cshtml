@model Tasneef.Models.Upload
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["Create"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-4">
    <div class="card">
        <div class="card-body">
            <h1>@Localizer["Create"]</h1>

            <h4>@Localizer["Upload"]</h4>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="IsForm" class="control-label">@Localizer["Form?"]</label>
                            <input id="IsForm" asp-for="IsForm" class="form-control" onclick="isForm()" />
                            <span asp-validation-for="IsForm" class="text-danger"></span>
                        </div>


                        <div id="customer" class="form-group">
                            <label asp-for="CustomerId" class="control-label">@Localizer["Customer"]</label>
                            <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                        </div>
                        <div id="project" class="form-group">
                            <label asp-for="ProjectId" class="control-label">@Localizer["Project"]</label>
                            <select asp-for="ProjectId" class="form-control" asp-items="ViewBag.ProjectId"></select>
                        </div>




                        <div class="form-group">
                            <label asp-for="Tag" class="control-label">@Localizer["Tag"]</label>
                            <input asp-for="Tag" class="form-control" />
                            <span asp-validation-for="Tag" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Tag" class="control-label">@Localizer["Select File"]</label>
                            <input type="file" name="file"  />
                        </div>
                        <div class="form-group">
                            <input type="submit" value="@Localizer["Create"]" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="Index">@Localizer["Back to List"]</a>
            </div>

        </div>
    </div>
</div>
<script src="~/js/site.js"></script>

