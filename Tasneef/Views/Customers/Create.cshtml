@model Tasneef.Models.Customer
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Localizer.GetString("Create");
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-12">
    <div class="card">

        <div class="card-body">
            <h4 class="card-title">
                @Localizer.GetString("Create new Customer")
            </h4>
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        @Localizer.GetString("Name")
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="@Localizer.GetString("Create")" class="btn btn-primary" />
                    </div>
                </form>

                <div>
                    <a asp-action="Index">@Localizer.GetString("Back to List")</a>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
