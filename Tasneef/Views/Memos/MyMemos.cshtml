@model IEnumerable<Tasneef.Models.Memo>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["Memos"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-12">
    <div class="card">

        <div class="card-body">
            <h4 class="card-title">@Localizer["Memos List"]</h4>


            <p>
                @*<a asp-action="Create">@Localizer["Create New"]</a>*@
            </p>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Localizer["Title"]
                        </th>
                        
                        
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            
                            
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id">@Localizer["Details"]</a> |
                                @*<a asp-action="Details" asp-route-id="@item.Id">@Localizer["Details"]</a> |*@
                                <a asp-action="Delete" asp-route-id="@item.Id">@Localizer["Delete"]</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>